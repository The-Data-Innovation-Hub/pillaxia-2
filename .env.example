# =============================================================================
# Pillaxia Environment Variables
# Copy this file to .env and fill in the values.
# =============================================================================

# ── Azure Authentication ──────────────────────────────────────────────────────
# Set to true to use Azure AD / Entra External ID for authentication
VITE_USE_AZURE_AUTH=true

# ── Azure API ─────────────────────────────────────────────────────────────────
# URL for the Express API backend (required)
VITE_API_URL=https://your-api.azurewebsites.net

# URL for Azure Functions serverless endpoints (required)
VITE_AZURE_FUNCTIONS_URL=https://your-functions.azurewebsites.net

# ── Microsoft Entra External ID / Azure AD B2C ───────────────────────────────
# Client (application) ID from Azure App Registration (required — one of these)
VITE_ENTRA_CLIENT_ID=
# VITE_AZURE_CLIENT_ID=          # Alternative name

# Authority URL for your Entra External ID tenant (required — one of these)
VITE_ENTRA_EXTERNAL_ID_AUTHORITY=
# VITE_AZURE_AUTHORITY=           # Alternative name
# VITE_AZURE_B2C_AUTHORITY=       # For B2C tenants
# VITE_AZURE_B2C_TENANT=          # For B2C tenants

# Scopes to request during authentication
VITE_ENTRA_SCOPES=openid,profile

# ── Azure Blob Storage (optional) ────────────────────────────────────────────
# Storage account name for avatar uploads
VITE_AZURE_STORAGE_ACCOUNT=

# ── App Settings ──────────────────────────────────────────────────────────────
# Enable demo/test features and show "Demo data" banner (set to false in production).
# Banner also shows when user email is *@pillaxia-dev.com.
VITE_ENABLE_DEMO=false

# Alternative: show demo banner only (without other demo features). Optional.
# VITE_DEMO_MODE=false

# VAPID public key for web push notifications (optional)
VITE_VAPID_PUBLIC_KEY=

# ── Database (for CLI scripts only) ──────────────────────────────────────────
# Used by psql when running seed scripts. The terminal does NOT load .env,
# so you must run:  export DATABASE_URL='...'  in the same shell before psql.
# Get the URL from your backend config or Azure Portal → PostgreSQL → Connection strings.
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE?sslmode=require

# ── Monitoring (optional) ────────────────────────────────────────────────────
# Sentry DSN for error tracking
VITE_SENTRY_DSN=
